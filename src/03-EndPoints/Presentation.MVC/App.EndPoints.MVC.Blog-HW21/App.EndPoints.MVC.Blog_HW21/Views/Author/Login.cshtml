@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}


<div class="floating-element" style="width: 80px; height: 80px; top: 10%; left: 5%; animation-delay: 0s;background-color:#52e9f9"></div>
<div class="floating-element" style="width: 60px; height: 60px; top: 70%; right: 10%; animation-delay: 2s;background-color:#52e9f9"></div>
<div class="floating-element1" style="width: 100px; height: 100px; bottom: 40%; left: 205px; animation-delay: 1s;background-color:#52e9f9;"></div>


<div class="login-container">
    <div class="login-left">
        <h2>به جامعه نویسندگان خوش آمدید</h2>
        <p>با ورود به حساب کاربری خود، به دنیای بی‌پایان داستان‌ها و اشعار دسترسی پیدا کنید و آثار خود را با جامعه نویسندگان به اشتراک بگذارید.</p>
        <ul class="login-features">
            <li><i class="fas fa-check"></i> دسترسی به هزاران اثر ادبی</li>
            <li><i class="fas fa-check"></i> انتشار و مدیریت آثار خود</li>
            <li><i class="fas fa-check"></i> دریافت بازخورد از نویسندگان دیگر</li>
            <li><i class="fas fa-check"></i> شرکت در مسابقات ادبی</li>
            <li><i class="fas fa-check"></i> ارتباط با نویسندگان هم‌فکر</li>
        </ul>

      
        <div class="floating-element" style="width: 40px; height: 40px; top: 20%; right: 15%; animation-delay: 1s;"></div>
        <div class="floating-element" style="width: 60px; height: 60px; bottom: 25%; left: 10%; animation-delay: 3s;"></div>
    </div>
    <div class="login-right">
        <div class="login-header">
            <h2>ورود به حساب کاربری</h2>
            <p>لطفا اطلاعات حساب خود را وارد کنید</p>
        </div>

        <form class="login-form">
            <div class="form-group">
                <label for="username">نام کاربری یا ایمیل</label>
                <input type="text" id="username" class="form-control" placeholder="نام کاربری یا ایمیل خود را وارد کنید" required>
                <i class="fas fa-user form-icon"></i>
            </div>

            <div class="form-group">
                <label for="password">رمز عبور</label>
                <input type="password" id="password" class="form-control" placeholder="رمز عبور خود را وارد کنید" required>
                <span class="password-toggle" id="togglePassword">
                    <i class="far fa-eye"></i>
                </span>
            </div>

            <div class="form-options">
                <div class="remember-me">
                    <input type="checkbox" id="remember">
                    <label for="remember">مرا به خاطر بسپار</label>
                </div>
                <a href="#" class="forgot-password">رمز عبور را فراموش کرده‌اید؟</a>
            </div>

            <button type="submit" class="login-btn">ورود به حساب</button>

            <div class="login-divider">
                <span>یا ورود با</span>
            </div>

            <div class="social-login">
                <button type="button" class="social-btn google">
                    <i class="fab fa-google"></i>
                    گوگل
                </button>
                <button type="button" class="social-btn facebook">
                    <i class="fab fa-facebook-f"></i>
                    فیسبوک
                </button>
            </div>

            <div class="signup-link">
                حساب کاربری ندارید؟
                <a href="#">همین حالا ثبت نام کنید</a>
            </div>
        </form>
    </div>
</div>

<script>
   
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function() {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.innerHTML = type === 'password' ? '<i class="far fa-eye"></i>' : '<i class="far fa-eye-slash"></i>';
    });

   
    document.querySelector('.login-form').addEventListener('submit', function(e) {
        e.preventDefault();
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;

        // Simple validation
        if(username.trim() === '' || password.trim() === '') {
            alert('لطفا تمام فیلدها را پر کنید');
            return;
        }

     
        alert(`ورود با موفقیت انجام شد!\nنام کاربری: ${username}`);

        // Reset form
        this.reset();
    });

   
    document.querySelector('.social-btn.google').addEventListener('click', function() {
        alert('ورود با حساب گوگل');
    });

    document.querySelector('.social-btn.facebook').addEventListener('click', function() {
        alert('ورود با حساب فیسبوک');
    });
</script>